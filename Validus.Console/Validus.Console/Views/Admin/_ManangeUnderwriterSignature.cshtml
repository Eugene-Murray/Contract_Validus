<div class="container-fluid">
    <form>
        <fieldset>
            <legend>Custom signature for Underwriter</legend>
            <div class="row-fluid">
                <div class="span3">
                    <input class="span12" type="text" placeholder="Underwriter" data-bind="'bootstrap-typeahead': {
                        data: Model.UnderwriterCode,
                        serviceurl: window.ValidusServicesUrl + 'Underwriter',
                        options: {
                            labelField: 'Title',
                            valueField: 'Value',
                        },
                        callback: function (data) {
                            var dataArray = [];
                            $(data).each(function (index, item) {
                                dataArray.push(
                                {
                                    Title: item.Code + ' : ' + item.Name,
                                    Value: item.Code
                                });
                            });
                            return dataArray;
                        }
                    }">
                </div>
                <div class="span3">
                    <select class="span12" data-bind="options: teamList, optionsText: 'name', optionsValue: 'key', optionsCaption: 'Select Team', value: selectedTeam"></select></div>
                <div class="span2">
                    <button class="btn" type="button" data-bind="click: GetUnderwriterTeamSignature">Load Signature</button>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span6">
                    <textarea  class="span12" rows="3" data-bind="value: Model.Signature"></textarea>
                </div>
                  <div class="span2">
                    <button class="btn" type="button" data-bind="click: CreateOrEditUnderwriterTeamSignature">Save Signature</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>
