@model Validus.Console.DTO.WorldCheckSearchCriteriaDto
<form class="form" action="/WorldCheck/_search" method="post">
    <fieldset class="hide" data-bind="css: { hide: !IsInitialised() }">
        <div class="row-fluid">
            <div class="span10 control-group">
                <label class="control-label">
                    Name
                </label>
                @Html.TextBoxFor(model => model.Name, new Dictionary<string, object> 
                    { 
                        { "id", ""},
                        { "class", "input-small span12" },
                        { "data-bind", "value: Model.Name, valueUpdate: 'afterkeydown'" }
                    })
            </div>
        </div>
        <div class="row-fluid">
            <div class="span10 control-group">
                <label class="control-label">
                    Keywords
                </label>
                @Html.TextBoxFor(model => model.Keywords, new Dictionary<string, object> 
                    { 
                        { "id", ""},
                        { "class", "input-small span12" },
                        { "data-bind", "value: Model.Keywords, valueUpdate: 'afterkeydown'" }
                    })
            </div>
        </div>
        <div class="row-fluid">
            <div class="span10">
                <div class="row-fluid">
                    <div class="span3 control-group">
                        <label class="control-label">
                            @Html.DisplayNameFor(model => model.Country)
                        </label>
                        @Html.DropDownListFor(model => model.Country, new List<SelectListItem>(), new Dictionary<string, object> 
                            { 
                                { "id", ""},
                                { "class", "input-large span12" },                            
                                { "data-bind", "options: countries, value: Model.Country, optionsText: 'Name', optionsValue: 'Name'" }
                            })
                    </div>
                    <div class="span3 control-group">
                        <label class="control-label">
                            @Html.DisplayNameFor(model => model.Category)
                        </label>
                        @Html.DropDownListFor(model => model.Category, new List<SelectListItem>(), new Dictionary<string, object> 
                            { 
                                { "id", ""},
                                { "class", "input-large span12" },                            
                                { "data-bind", "options: categories, value: Model.Category, optionsText: 'Name', optionsValue: 'Name'" }
                            })
                    </div>
                    <div class="span3 control-group">
                        <label class="control-label">&nbsp;</label>
                        <button type="button" class="btn btn-small btn-primary" data-bind="click: Search, enable: !IsSearching()">
                            Search <i class="val-loading-icon hide" data-bind="visible: IsSearching"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</form>
<fieldset class="hide" data-bind="css: { hide: !IsInitialised() }">
    <div class="row-fluid">
        <div class="span10 control-group">
            <div class="val-worldcheck-searchresults-matches">
                <table class="val-worldcheck-searchresults-datatable table table-condensed table-bordered table-hover">
                    <caption><strong>WorldCheck Matches</strong></caption>
                </table>
            </div>
        </div>
    </div>
</fieldset>
