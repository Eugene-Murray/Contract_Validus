@model Validus.Models.OptionVersionHM

<div class="span2">
	<label class="control-label">
	    @Html.DisplayNameFor(model => model.TSICurrency)
	</label>
	@Html.TextBoxFor(model => model.TSICurrency, new Dictionary<string, object> 
	    { 
	        { "id", ""},
	        { "class", "input-large span12 typeahead" },
	        { "data-bind", "value: _TSICurrency, valueUpdate: 'afterkeydown', enable: !IsLocked()" },
            { "data-rest", "Currency" }
	    })
	@Html.ValidationMessageFor(model => model.TSICurrency, null, new { @class = "help-block" })
</div>
<div class="span2">
	<label class="control-label">
	    @Html.DisplayNameFor(model => model.TSIAmount)
	</label>
	@Html.TextBoxFor(model => model.TSIAmount, new Dictionary<string, object> 
	    { 
	        { "id", ""},
	        { "class", "input-large span12 val-currency" },
	        { "data-bind", "auto-numeric: { data: TSIAmount }, enable: !IsLocked()" }
	    })
	@Html.ValidationMessageFor(model => model.TSIAmount, null, new { @class = "help-block" })
</div>