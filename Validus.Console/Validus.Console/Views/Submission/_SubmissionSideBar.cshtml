@model Validus.Models.Submission

<div class="span6">
                <div class="tabbable tabs-right" data-bind="bootstrap-tabs-init: []">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#" data-toggle="tab"><i class="icon-pencil"></i>
                                @Html.DisplayNameFor(model => model.UnderwriterNotes)
                            </a>
                        </li>
                        <li>
                            <a href="#" data-toggle="tab"><i class="icon-pencil"></i>
                                @Html.DisplayNameFor(model => model.QuoteSheetNotes)
                            </a>
                        </li>
                        @* TODO: Implement Conditions partial view
						<li><a href="#" data-toggle="tab"><i class="icon-tag"></i> Conditions</a></li>
						*@
                        <li class="worldCheckLink"><a href="#" data-toggle="tab"><i class="icon-globe"></i>World Check <span data-bind="text: WorldCheckCount"></span></a></li>
                        <li><a href="#" data-toggle="tab"><i class="icon-list-alt"></i>Documents <span data-bind="text: DocumentCount"></span></a></li>
                        <li><a href="#" data-toggle="tab"><i class="icon-inbox"></i>Related <span data-bind="text: RelatedCount"></span></a></li>
                        <li><a href="#" data-toggle="tab" data-bind="click: click_SetBrokerLossRatios"><i class="icon-map-marker"></i>Loss Ratio</a></li>
                        <li class="crossSellingLink"><a href="#" data-toggle="tab"><i class="icon-warning-sign"></i>Cross-selling<span data-bind="text: CrossSellingCount"></span></a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <label class="control-label">
                                @Html.DisplayNameFor(model => model.UnderwriterNotes)
                            </label>
                            @Html.TextAreaFor(model => model.UnderwriterNotes, new Dictionary<string, object> 
                                { 
                                    { "id", ""},
                                    { "class", "input-xlarge span12" },
                                    { "data-bind", "value: Model.UnderwriterNotes" },
                                    { "rows", "12" }
                                })
                            @Html.ValidationMessageFor(model => model.UnderwriterNotes, null, new { @class = "help-block" })
                        </div>
                        <div class="tab-pane">
                            <label class="control-label">
                                @Html.DisplayNameFor(model => model.QuoteSheetNotes)
                            </label>
                            @Html.TextAreaFor(model => model.QuoteSheetNotes, new Dictionary<string, object> 
                                { 
                                    { "id", ""},
                                    { "class", "input-xlarge span12" },
                                    { "data-bind", "value: Model.QuoteSheetNotes" },
                                    { "rows", "12" }
                                })
                            @Html.ValidationMessageFor(model => model.QuoteSheetNotes, null, new { @class = "help-block" })
                        </div>
                        @* TODO: Implement Conditions partial view
						<div class="tab-pane"></div>
						*@
                        <div class="tab-pane val-worldcheck-matches"></div>
                        <div class="tab-pane val-submission-documents"></div>
                        <div class="tab-pane val-related-loss-ratios"></div>
                        <div class="tab-pane val-broker-lossratio">
                            <table class="table table-condensed table-bordered">
                                <caption>Broker Loss Ratio By Year</caption>
                                <tbody>
                                    <tr>
                                        @* TODO: Remove inline styles *@
                                        <td style="padding-top: 20px; padding-bottom: 20px; overflow: visible;">
                                            <div class="container-fluid">
                                                <div class="row-fluid">
                                                    <div class="span8">
                                                        <div class="val-broker-lossratio-sparkline" style="line-height: 40px" data-bind="click: ShowLossRatioGraph"></div>
                                                        <img class="val-broker-lossratio-loading" src="~/content/images/animated_progress.gif" style="width: 20px; height: 20px;" alt="" />
                                                    </div>
                                                    <div class="span4">
                                                        <div class="row-fluid">
                                                            <div class="span6">
                                                                <h2 style="color: #6391B5"><span data-bind="text: BrokerRating"></span></h2>
                                                            </div>
                                                            <div class="span6">
                                                                <h2 style="color: #6391B5"><span data-bind="text: BrokerScore"></span></h2>
                                                            </div>
                                                        </div>
                                                        <div class="row-fluid">
                                                            <div class="span6 offset2">
                                                                <h5><span data-bind="text: BrokerCreditLimit"></span></h5>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane val-cross-selling"></div>
                    </div>
                </div>
            </div>